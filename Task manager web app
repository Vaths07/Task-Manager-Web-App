            width: 90%;
            max-width: 500px;
            box-shadow: 0 0 15px rgba(0,0,0,0.5);
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
        }

        .input-section {
            display: flex;
            flex-direction: column;
            gap: 10px;
            margin-bottom: 20px;
        }

        input[type="text"], input[type="time"] {
            padding: 12px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
        }

        button {
            background-color: #28a745;
            border: none;
            color: white;
            padding: 12px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
            font-size: 16px;
        }

        button:hover {
            background-color: #218838;
        }

        ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        li {
            background: #333;
            padding: 12px;
            margin-bottom: 10px;
            border-radius: 5px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: transform 0.2s;
        }

        li.completed {
            text-decoration: line-through;
            opacity: 0.6;
        }

        li:hover {
            transform: scale(1.01);
        }

        .task-buttons i {
            cursor: pointer;
            margin-left: 10px;
            transition: color 0.3s;
        }

        .task-buttons i:hover {
            color: #ffc107;
        }

        .counter {
            text-align: center;
            margin-top: 10px;
            font-size: 14px;
        }

        .empty-message {
            text-align: center;
            font-style: italic;
            color: #bbb;
