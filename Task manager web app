<body>
    <div class="container">
        <h1><i class="fa-solid fa-list-check"></i> Task Manager</h1>

        <div class="input-section">
            <input type="text" id="taskInput" placeholder="Enter a new task">
            <input type="time" id="taskTime" title="Set a reminder time">
            <button onclick="addTask()"><i class="fa fa-plus"></i> Add Task</button>
        </div>

        <ul id="taskList"></ul>

        <div class="empty-message" id="emptyMessage">No tasks added yet!</div>
        <img src="https://cdn-icons-png.flaticon.com/512/4076/4076503.png" alt="No Tasks" class="empty-image" id="emptyImage">

        <div class="counter" id="taskCounter">Total: 0 | Completed: 0</div>
    </div>

    <script>
        const taskInput = document.getElementById('taskInput');
        const taskTimeInput = document.getElementById('taskTime');
        const taskList = document.getElementById('taskList');
        const emptyMessage = document.getElementById('emptyMessage');
        const emptyImage = document.getElementById('emptyImage');
        const taskCounter = document.getElementById('taskCounter');

        function getStoredTasks() {
            return JSON.parse(localStorage.getItem('tasks') || '[]');
        }

        function saveTasks(tasks) {
            localStorage.setItem('tasks', JSON.stringify(tasks));
        }

        function addTask() {
            const taskText = taskInput.value.trim();
            const taskTime = taskTimeInput.value;

            if (!taskText) return;

            const task = {
                text: taskText,
                time: taskTime,
                completed: false
            };

            const tasks = getStoredTasks();
            tasks.push(task);
            saveTasks(tasks);
            renderTasks();
            taskInput.value = '';
            taskTimeInput.value = '';
            scheduleReminder(task);
        }

        function toggleTask(index) {
            const tasks = getStoredTasks();
            tasks[index].completed = !tasks[index].completed;
            saveTasks(tasks);
            renderTasks();
        }

        function deleteTask(index) {
            const tasks = getStoredTasks();
            tasks.splice(index, 1);
            saveTasks(tasks);
            renderTasks();
        }

        function scheduleReminder(task) {
            if (!task.time) return;

            const now = new Date();
            const [hours, minutes] = task.time.split(':').map(Number);
            const reminder = new Date();
            reminder.setHours(hours, minutes, 0, 0);

            const delay = reminder - now;
            if (delay > 0) {
                setTimeout(() => {
                    alert(`ðŸ”” Reminder: ${task.text}`);
                }, delay);
            }
        }

        function renderTasks() {
            const tasks = getStoredTasks();
            taskList.innerHTML = '';

            if (tasks.length === 0) {
                emptyMessage.style.display = 'block';
                emptyImage.style.display = 'block';
            } else {
                emptyMessage.style.display = 'none';
                emptyImage.style.display = 'none';
            }

            tasks.forEach((task, index) => {
                const li = document.createElement('li');
                if (task.completed) li.classList.add('completed');

                const content = document.createElement('div');
                const span = document.createElement('span');
                span.textContent = task.text;
                content.appendChild(span);

                if (task.time) {
                    const time = document.createElement('div');
                    time.className = 'task-time';
                    time.textContent = `â° ${task.time}`;
                    content.appendChild(time);
                }

                const buttons = document.createElement('div');
                buttons.className = 'task-buttons';

                const completeBtn = document.createElement('i');
                completeBtn.className = 'fa fa-check';
                completeBtn.title = 'Mark as complete';
                completeBtn.onclick = () => toggleTask(index);

                const deleteBtn = document.createElement('i');
                deleteBtn.className = 'fa fa-trash';
                deleteBtn.title = 'Delete task';
                deleteBtn.onclick = () => deleteTask(index);

                buttons.appendChild(completeBtn);
                buttons.appendChild(deleteBtn);

                li.appendChild(content);
                li.appendChild(buttons);
                taskList.appendChild(li);

                scheduleReminder(task);
            });

            updateCounter();
        }

        function updateCounter() {
            const tasks = getStoredTasks();
            const total = tasks.length;
            const completed = tasks.filter(t => t.completed).length;
            taskCounter.textContent = `Total: ${total} | Completed: ${completed}`;
        }

        taskInput.addEventListener('keydown', (e) => {
            if (e.key === 'Enter') addTask();
        });

        window.onload = renderTasks;
    </script>
</body>
</html>
